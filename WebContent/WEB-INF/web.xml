<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>Cotizador</display-name>
      
     <filter>
	   <filter-name>appFilter</filter-name>
	   <filter-class>cotizador.filter.ApplicationFilter</filter-class>
	 </filter>
	 
	 <filter-mapping>
	   <filter-name>appFilter</filter-name>
	   <url-pattern>*</url-pattern>
	</filter-mapping>

  	 <servlet>
        <servlet-name>RestServices</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <!-- Define the ResourceConfig class -->
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>cotizador.app.ApplicationInitializing</param-value>
        </init-param>          
    </servlet>

    <!-- Map all the URLs to the Jersey ServletContainer -->
    <servlet-mapping>
        <servlet-name>RestServices</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>myTest</servlet-name>
      <jsp-file>/jsp/test.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>myTest</servlet-name>
	      <url-pattern>/test</url-pattern>
	 </servlet-mapping>	
	 
	 <servlet>
      <servlet-name>testTemp</servlet-name>
      <jsp-file>/jsp/testTemplate.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>testTemp</servlet-name>
	      <url-pattern>/testTemplate</url-pattern>
	 </servlet-mapping>	
	 
	<servlet>
      <servlet-name>login</servlet-name>
      <jsp-file>/jsp/login.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>login</servlet-name>
	      <url-pattern>/login</url-pattern>
	 </servlet-mapping>	
	 <servlet>
      <servlet-name>admUsuarios</servlet-name>
      <jsp-file>/jsp/admUsuarios.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>admUsuarios</servlet-name>
	      <url-pattern>/admUsuarios</url-pattern>
	 </servlet-mapping>	
	 <servlet>
      <servlet-name>admPermisos</servlet-name>
      <jsp-file>/jsp/admPermisos.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>admPermisos</servlet-name>
	      <url-pattern>/admPermisos</url-pattern>
	 </servlet-mapping>	
	 <servlet>
		 <servlet-name>index</servlet-name>
	     <jsp-file>/jsp/index.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>index</servlet-name>
	      <url-pattern>/index</url-pattern>
	 </servlet-mapping>	  
	 
	  <servlet>
		 <servlet-name>proyecto</servlet-name>
	     <jsp-file>/jsp/proyecto.jsp</jsp-file>
	 </servlet>
	 <servlet-mapping>
	      <servlet-name>proyecto</servlet-name>
	      <url-pattern>/proyecto</url-pattern>
	 </servlet-mapping>	   	
</web-app>